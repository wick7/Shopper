				$('.header-cart-wrapitem').append(
					`<li class="header-cart-item" data-item="${i.product_name}"><a href="/${i.product_name}"><div class="delMeModalCart header-cart-item-img"><img src="/images/${i.photolink}" alt="IMG"></div></a><div class="header-cart-item-txt"><a href="/${i.product_name}" class="header-cart-item-name">${i.product_name}</a><span class="header-cart-item-info">${i.stock_quantity} x $${i.price}</span></div></li>`)
