<script>

	$(document).ready(function () {

		$('.header-cart-wrapitem').empty() // Items in Cart visible on modal for nav
		$('.total').empty() // Price Total
		$('.header-icons-noti').empty() //Stock Total


		$.ajax({
			method: "GET",
			url: "/cartData"
		}).then(function (response) {


			for (var i of response.cart) {
				$('.header-cart-wrapitem').append(
					`<li class="header-cart-item" data-item="${i.product_name}"><a href="/${i.product_name}"><div class="delMeModalCart header-cart-item-img"><img src="/images/${i.photolink}" alt="IMG"></div></a><div class="header-cart-item-txt"><a href="/${i.product_name}" class="header-cart-item-name">${i.product_name}</a><span class="header-cart-item-info">${i.stock_quantity} x $${i.price}</span></div></li>`)
			}

			$('.total').append(response.totals[0].total)
			$('.header-icons-noti').append(response.totals[0].stockT)

		});

	});

	$(".delMeCart").on('click', function () {

		var delItem = {
			name: $(this).parent().data('item')
		}

		console.log(delItem)


		$(this).parent().parent().remove()

		$.ajax({
			method: "PUT",
			url: '/delete/cart',
			data: delItem
		}).then(function (data) {

			console.log("browser: " + data)
		});

	});


	$(".js-show-header-dropdown, .delMeCart").click(function () {
		event.preventDefault();
		$('.header-cart-wrapitem').empty() // Items in Cart visible on modal for nav
